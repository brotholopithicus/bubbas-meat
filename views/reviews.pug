extends layout

block stylesheets

block content
  include partials/header
  .reviews.container
    .quote-container
      p#quote
        span.fadeIn
    .reviews-container
      each review in reviews
        .review(data-event=review)
          .image
            img(src='http://baconmockup.com/200/200')
          .text
            h4= review.quote
            cite= review.name

      else
        .event
          h3 NOTHING HERE. 
          p This world is a vacuous empty pit of despair with nothing novel or exciting ever happening.

block scripts
  script(src='/js/reviews.js')
