extends layout

block stylesheets
  link(rel='stylesheet', href='https://unpkg.com/flatpickr/dist/flatpickr.min.css')

block content
  include partials/header
  .admin-container.sub-container
    .events
      h1 Event List
      .event
        h4 Num.
        h4 Title
        h4 Edit
        h4 Delete
      each event, index in events
        .event(data-event=event)
          h4= index + 1 + '.'
          h4= event.title
          .btn-container
            button#editEvent &plus;
          .btn-container
            button#removeEvent &times;
      else
        .event
          h4 There's nothing here.
    .new-event
      form.admin-form#admin
        fieldset
          legend New Event
          .form-control
            label.form-label(for='title')
              span Title
            input#title.form-input(type='text', name='title', placeholder='Title', required)
          .form-control
            label.form-label(for='description')
              span Description
            input#description.form-input(type='text', name='description', placeholder='Description', required)
          .form-control
            label.form-label(for='data')
              span Date
            input#date.form-input.flatpickr(type='text', name='date', placeholder='Date', required)  
          .form-control
            label.form-label(for='address')
              span Address
            input#address.form-input(type='text', name='address', placeholder='Street Address', required)
          .form-control
            label.form-label(for='city')
              span City
            input#city.form-input(type='text', name='city', placeholder='City', required)
          .form-control
            label.form-label(for='state')
              span State
            input#state.form-input(type='text', name='state', placeholder='State', required)
          .form-control
            label.form-label(for='zip')
              span Zip
            input#zip.form-input(type='text', name='zip', placeholder='Zip', required)
          .form-control.form-control-link
            label.form-label(for='link-toggle') Add Link
            #link-toggle 
              span &plus;
          .link-inputs
            .form-control
              label.form-label(for='link')
                span Link URL
              input#url.form-input(type='text', name='link', placeholder='Link URL', required)
            .form-control
              label.form-label(for='linktext')
                span Link Text
              input#text.form-input(type='text', name='linktext', placeholder='Link Text', required)
        button.submit(disabled) Submit

block scripts
  script(src='https://unpkg.com/flatpickr')
  script(src='/js/admin.js')
